        <% for(let i = 0; i < products.length; i++) { %>
            <div class="p-2 my-flex-item">
                <a href="/customers/product/<%=products[i].product_id%>">
                    <img  src="../../images/products/<%= products[i].photo_path[0] %>" class="responsive-img">
                    <p style="color:#294553;">
                        <%= products[i].product_name %> <br>
                        <%= products[i].price %> KM <br>
                    </p>
