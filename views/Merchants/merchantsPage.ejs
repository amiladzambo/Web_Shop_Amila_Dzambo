                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Send message to
                </a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    <a class="dropdown-item" href="/merchants/adminChat">Admin</a>
                    <a class="dropdown-item" href="/merchants/customersChat">Customer</a>
                </div>
            </li>
        </ul>
        <form action="/merchants/logout" method="post">
            <a href="/merchants/merchantPage" style="color: #5786b7;"> <small style=" padding: 15px; color: #294553"> <%=user%> </small></a>
            <span class="dot2"><img src="../images/Profile_pictures/<%= shop[0].profilepicture_path%>" class="responsive-img"></span>
            <input type="submit" value="Log out" class="btn btn-info" style="background-color: #294553; border: white;">
        </form>
    </div>
</nav>

    <div class="shop-cover">
        <% if(typeof cover != "undefined") { %>
                <img src="../images/Cover_pictures/<%= shop[0].coverimage_path%>" class="responsive-img">
        <%}%>
    </div>
    <div class="shop-profile">
        <span class="dot"><img src="../images/Profile_pictures/<%= shop[0].profilepicture_path%>" class="responsive-img"></span>
    </div>

    <div class="container" style="width: 100%; background-color: white; margin-top: -5%; margin-bottom: 2%;">
        <div class="row">
            <div class="col-sm">
                <div class="login-box" style="height: 80%; width: 80%; margin: 0 0 2% 2%;">
                    <div class="login-form" style="width: 80%; margin: 17% 0 0 18%;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                            <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                            <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
                        </svg>
                        <span style="color: #294553; font-size: 20px; "><b> Edit profile </b></span>
                        <% if(typeof alert != "undefined"){ %>
                            <div class="alert alert-warning">
                                <strong>Warning!</strong>
                                <%= alert %>
                            </div>
                        <%}%>
                        <form action="/merchants/update" method="post">
                            <b><small style="color: #294553"> Shop info </small></b> <br> <br>
                            <label for="shopname">Shop name</label>
                            <input type="text" name="shopname" class="form-control" value="<%= shop[0].shopname%>"> <br>
                            <label for="phone">Telephone</label>
                            <input type="tel" name="phone" class="form-control" value="<%= shop[0].telephone%>"> <br>
                            <label for="email">Email</label>
                            <input type="email" name="email" class="form-control" value="<%= shop[0].email%>"> <br>
                            <label for="head_address"> Shop headquarters address </label>
                            <input type="text" name="head_address" class="form-control" value="<%= shop[0].headquaters_address%>"> <br>
                            <label for="branch_address"> Shop branch office addresses </label>
                            <input type="text" name="branch_address" class="form-control" value="<%= shop[0].branchoffice_address%>"> <br>
                            <b><small style="color: #294553"> Personal info </small></b> <br> <br>
                            <label for="firstname">First name</label>
                            <input type="text" name="firstname" class="form-control" value="<%= shop[0].firstname%>"> <br>
                            <label for="lastname">Last name</label>
                            <input type="text" name="lastname" class="form-control" value="<%= shop[0].lastname%>"> <br>
                            <input type="submit" value="Save changes" class="btn btn-info" style="background-color: #294553; border: white;">
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-sm">
                <div class="login-box" style="height: 80%; width: 80%; margin: 10% 0 2% 0;">
                    <div class="login-form" style=" height: 25%; width: 90%; margin: 0 0 0 25%;">
                        <p>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-image-alt" viewBox="0 0 16 16">
                                <path d="M7 2.5a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0zm4.225 4.053a.5.5 0 0 0-.577.093l-3.71 4.71-2.66-2.772a.5.5 0 0 0-.63.062L.002 13v2a1 1 0 0 0 1 1h14a1 1 0 0 0 1-1v-4.5l-4.777-3.947z"/>
                            </svg>
                            <b> Change profile photo </b>
                        </p> <br>
                        <div class="mb-3">
                            <form method="post" action="/merchants/changeProfilePhoto" enctype="multipart/form-data">
                                <input type="file"   class="form-control form-control-sm" name="newProfilePhoto" accept="image/*" > <br>
                                <input type="submit" value="Change" class="btn btn-info" style="background-color: #294553; border: white;">
                            </form> <br> <br>
                        </div>

                    </div>
                    <div class="login-form" style="height: 25%; width: 90%; margin: 0 0 0 25%;">
                        <p>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-image-alt" viewBox="0 0 16 16">
                                <path d="M7 2.5a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0zm4.225 4.053a.5.5 0 0 0-.577.093l-3.71 4.71-2.66-2.772a.5.5 0 0 0-.63.062L.002 13v2a1 1 0 0 0 1 1h14a1 1 0 0 0 1-1v-4.5l-4.777-3.947z"/>
                            </svg>
                            <b> Change cover photo </b> </p>
                        <br>
                        <div class="mb-3">
                            <form method="post" action="/merchants/changeCoverPhoto" enctype="multipart/form-data">
                                <input type="file"   class="form-control form-control-sm" name="newCoverPhoto" accept="image/*"> <br>
                                <input type="submit" value="Change" class="btn btn-info" style="background-color: #294553; border: white;">
                            </form> <br> <br>
                        </div>
                    </div>
                    <div class="login-form" style="height: 25%; width: 90%;margin: 0 0 0 25%;">
                        <p> <b> Change password </b> </p> <br>
                        <form method="post" action="/merchants/changePassword">
                            <label for="password">New password</label>
                            <input type="password" name="password" class="form-control"> <br>
                            <input type="submit" value="Change password" class="btn btn-info" style="background-color: #294553; border: white;">
                        </form> <br> <br>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </div>
</body>
</html>
