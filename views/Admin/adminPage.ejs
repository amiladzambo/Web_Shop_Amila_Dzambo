        <form action="/adminLogin/logout" method="post">
            <a href="/adminLogin/adminPage" style="color: #5786b7;"> <small style=" padding: 15px;"> <%=user%> </small></a>
            <input type="submit" value="Log out" class="btn btn-info" style="background-color: #c19361; border: white">
        </form>
    </div>
</nav>

    <div class="container-sm" style="background-color: #FFFFFF; text-align: center; margin-top: 2%;">
       <h4> Statistics </h4>
        <div class="table-responsive">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">SHOPS</th>
                <th scope="col">CUSTOMERS</th>
                <th scope="col">PRODUCTS</th>
                <th scope="col">ORDERS</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td> <%= shops %> </td>
                <td> <%= cust %> </td>
                <td> <%= products %> </td>
                <td> <%= orders %> </td>

            </tr>
            </tbody>
        </table>
        </div>
        <div class="container-sm">
            <canvas id="myChart" style="width:100%; max-width:700px;"></canvas>
        </div>
    </div>
<script>
    var xValues = ["SHOPS", "CUSTOMERS", "PRODUCTS", "ORDERS"];
    var yValues = [<%=shops%>, <%=cust%>, <%=products%>, <%=orders%>];
    var barColors = ["#c19361", "#b9916b", "#c6a394", "#f1e7d3"];

    new Chart("myChart", {
        type: "bar",
        data: {
            labels: xValues,
            datasets: [{
                backgroundColor: barColors,
                data: yValues
            }]
        },
        options: {
            legend: {display: false},
            title: {
                display: true
            }
        }
    });
</script>
</body>
</html>
